<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Librarymsgraphandroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Librarymsgraphandroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Librarymsgraphandroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Librarymsgraphandroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BrightText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/brightTextColor</item>
    </style>

    <style name="HeaderText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorHeader</item>
    </style>

    <style name="Header1Text" parent="@style/HeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header2Text" parent="@style/HeaderText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header3Text" parent="@style/HeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HighlightText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/brightTextColor</item>
    </style>

    <style name="Highlight2Text" parent="@style/HighlightText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Highlight3Text" parent="@style/HighlightText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text3" parent="@style/BrightText">
        <item name="android:textSize">14sp</item>
    </style>


</resources>